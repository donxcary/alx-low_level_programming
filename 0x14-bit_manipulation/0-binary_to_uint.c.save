
#include "main.h"
#include <stdio.h>

/**
 * binary_to_uint - converts a binary string to an unsigned int
 * @b: pointer to a null-terminated string of 0 and 1 chars
 *
 * Return: the converted number, or 0 if
 * b is NULL or invaild
 */

unsigned int binary_to_uint(const char *b)
{
	unsigned int num = 0;
	int i;
	/* check if b is NULL or empty */
	if (b == NULL || *b == '\0')
		return (0);
	/* loop through each char of b */
	while (*b)
	{
		/* check if b contains a non-0/1 char */
			if (*b != '0' && *b != '1')
			return (0);
		/* left shift num by 1 bit and add current bit's value */
			num = (num << 1) | (*b - '0');
	/* move to next char */
			b++;
	}
	/* return the converted number */
return (num);
}
